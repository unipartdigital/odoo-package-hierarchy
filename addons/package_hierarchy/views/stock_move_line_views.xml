<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_stock_move_line_detailed_operation_tree" model="ir.ui.view">
        <field name="name">stock.move.line.operations.tree</field>
        <field name="inherit_id" ref="stock.view_stock_move_line_detailed_operation_tree"/>
        <field name="model">stock.move.line</field>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='result_package_id']" position="after">
                <field name="id" invisible="1"/>
                <field name="x_result_package_link_ids" widget="many2many_tags" groups="stock.group_tracking_lot"
                       context="{'default_move_line_ids': [(4, id)], 'default_company_id': company_id}"/>
            </xpath>
        </field>
    </record>
</odoo>
